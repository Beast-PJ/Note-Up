<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tvTaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Name"
        android:textStyle="bold"
        style="@style/TaskTextStyle" />

    <TextView
        android:id="@+id/tvTaskDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Details"
        style="@style/TaskTextStyle"
        android:layout_below="@id/tvTaskName"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvTaskXP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XP: 100"
        style="@style/TaskTextStyle"
        android:layout_below="@id/tvTaskDetails"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvTaskDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Difficulty: 3"
        style="@style/TaskTextStyle"
        android:layout_below="@id/tvTaskXP"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvTaskReward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reward: 50 coins"
        style="@style/TaskTextStyle"
        android:layout_below="@id/tvTaskDifficulty"
        android:layout_marginTop="4dp"/>
</RelativeLayout>
